<%= form_with(model: @novel, local: true, class: "novel-form") do |form|%>
  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title %>
  </div>
  <div class="form-group">
    <%= form.label :main_text, "本文"%>
    <%= form.text_area :main_text,rows: "10" %>
  </div>
  <div class="form-group">
    <%= form.submit "保存" %>
  </div>
<% end %>
<%= link_to '小説一覧に戻る', novels_path %>